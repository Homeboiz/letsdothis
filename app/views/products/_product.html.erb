

 <div class="row">
  <div class="col-sm-6 col-md-4 products-index">
    <div class="thumbnail">
      <%= image_tag(product.image_url) %>
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p>
          <strong>Colour:</strong>
          <%= product.colour %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= product.price %>
        </p>
        
			<%= link_to 'Show', product, :class => "btn btn-primary" %>  <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-primary"  %>  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary"  %>

        
      </div>
    </div>
  </div>
</div>

