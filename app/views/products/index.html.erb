<div class="container-fluid">
  <div class="row descriptions">
    <div class="col-md-2 col-xs-2">Name</div>
    <div class="col-md-2 col-xs-2">Description</div>
    <div class="col-md-2 col-xs-2">Colour</div>
    <div class="col-md-2 col-xs-2">Price</div>
    <div class="col-md-2 col-xs-2">Image url</div>
    <div class="col-md-2 col-xs-2">Actions</div>
  </div>
</div>


<div class="container-fluid">
  <% @products.each do |product| %>
  <div class="row">
    
    <div class="col-md-2 col-xs-2"><%= product.name %></div>
    <div class="col-md-2 col-xs-2"><%= product.description %></div>
    <div class="col-md-2 col-xs-2"><%= product.colour %></div>
    <div class="col-md-2 col-xs-2"><%= product.price %></div>
    <div class="col-md-2 col-xs-2"><%= product.image_url %></div>
    <div class="col-md-2 col-xs-2"><%= link_to 'Show', product %>  <%= link_to 'Edit', edit_product_path(product) %>  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Product', new_product_path, :class=>'btn btn-primary product-button'%>
