<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>


<div class="products">
<table>
  <thead>
    <tr class="items">
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="items">
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<button class="btn btn-priimary product-button">
<%= link_to 'New Product', new_product_path, :class=>'product-button'%>
</button>
</div>